@model CreateRoleViewModel

@{
    Layout = "_Validation";
    ViewData["Title"] = "Create New Role";
}

<div class="background-image" style="background-image: url('../Images/cereal.jpg');">

    <div class="container text-center">
        <div class="container text-center">
            <div class="row">
                <div class="col-12">
                    <h2 class="title">Grab & Go</h2>
                </div>
            </div>
        </div>


        <div class="container text-center">
            <div class="row">
                <div class="col-12">
                    <div><img class="cart-img center" src="~/Images/speedycart.png" alt="Grab&Go Logo"></div>
                </div>
            </div>
        </div>


        <div class="form-container">

            <h2 class="text-center">Create New Role</h2>

            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    @*<label asp-for="RoleName" class="control-label"></label>*@
                    <input asp-for="RoleName" class="form-control input-gray" placeholder="Role Name" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
               
                <div class="form-group">
                    <input type="submit" value="Create Role" class="btn btn-primary text-center" />
                </div>
                @*<button type="submit" class="btn btn-primary">Register</button>*@
            </form>
        </div>
    </div>
</div>