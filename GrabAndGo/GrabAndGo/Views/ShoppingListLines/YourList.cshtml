@*@model GrabAndGo.Models.ViewModels.ShoppingList*@

@model IEnumerable<ShoppingListLine>

@{
    ViewData["Title"] = "Shopping List";
    bool IsSharing = ViewBag.IsSharing;
}

    <div class="container">
        <div class="form-group text-center">
            <a asp-controller="Products" asp-action="List" asp-route-userName="@User.Identity.Name" class="btn btn-primary text-center">Add Item</a>
        </div>
        @if (IsSharing)
        {
            <span>Sharing: Yes</span>
            <div class="form-group text-center">
                <a asp-controller="ShoppingListLines" asp-action="StopSharing" class="btn btn-primary text-center">Stop Sharing</a>
            </div>
        }
        else
        {
            <span>Sharing: No</span>
            <div class="form-group text-center">
                <a asp-controller="ShoppingListLines" asp-action="ShareList" asp-route-userName="@User.Identity.Name" class="btn btn-primary text-center">Share List</a>
            </div>
        }


        @if (Model.Count() > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ProductID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Quantity)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h1 class="text-center">Your shopping list is empty</h1>
        }
        <div class="text-center mb-2">
            <a asp-action="ShoppingList" asp-route-userName="@User.Identity.Name" class="btn btn-outline-success">Let's Go Shopping</a>
        </div>
    </div>