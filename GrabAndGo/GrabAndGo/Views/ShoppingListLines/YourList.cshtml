@*@model GrabAndGo.Models.ViewModels.ShoppingList*@

@model IEnumerable<ShoppingListLine>

@{
    ViewData["Title"] = "Shopping List";
}


<div class="form-group text-center">
    <a asp-controller="Products" asp-action="List" asp-route-userName="@User.Identity.Name" class="btn btn-primary text-center">Add Item</a>
</div>

@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProductID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1>Your shopping list is empty</h1>
}