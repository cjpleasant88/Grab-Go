@model IEnumerable<ShoppingList>

@{
    ViewData["Title"] = "ShoppingList";
    string storeName = ViewBag.StoreName;
}

    <h1 class="text-center">ShoppingList</h1>

<h2 class="text-center">Current Store: @storeName</h2>
<a asp-action="ChangeStoreList" class="btn btn-outline-success text-center">Change Store</a>

    <div class="container">
        <div class="form-group text-center">
            <a asp-controller="Products" asp-action="List" asp-route-userName="@User.Identity.Name" class="btn btn-primary text-center">Add Item</a>
        </div>

        
        @if (Model.Count() > 0)
        {
            @for (int i = 1; i < 15; i++)
            {
                bool itemsExists = false;
                string category = null;

                foreach(var item in Model)
                {
                    if (i == item.AisleNumber)
                    {
                        itemsExists = true;
                        category = item.Category;
                    }
                }
                if (itemsExists)
                {
                <h5 class="text-center">Aisle: @i (@category)</h5>


                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ProductName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Quantity)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (itemsExists)
                        {
                            foreach (var item in Model)
                            {
                                if (item.AisleNumber == i)
                                {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProductName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Quantity)
                                </td>
                            </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
                    }

                    itemsExists= false;
                }
            }
        else
        {
            <h1 class="text-center">Your shopping list is empty</h1>
        }

        <div class="text-center mb-2">
            <a asp-controller="ShoppingListLines" asp-action="YourList" asp-route-userName="@User.Identity.Name" class="btn btn-outline-success">Back to Your List</a>
        </div>
    </div>