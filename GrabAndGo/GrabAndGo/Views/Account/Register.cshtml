@model RegisterViewModel

@{
    //Layout = "_Validation";
    ViewData["Title"] = "Sign Up!";
}

<div class="background-image" style="background-image: url('../Images/vegies.jpg');">
    <div class="container text-center">
        @*<div class="container text-center">
            <div class="row">*@
                @*<div class="col-12">
                    <h2 class="title">Grab & Go</h2>
                </div>*@
            @*</div>
        </div>*@


        <div class="col-12">
            <img class="cart-img" src="~/Images/blankicon.png" alt="Grab&Go Logo">
        </div>


        <div class="form-container">

            <h2 class="text-center"> New Member Registration</h2>

            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    @*<label asp-for="FirstName" class="control-label"></label>*@
                    <input asp-for="FirstName" class="form-control input-gray" placeholder="First Name" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @*<label asp-for="LastName" class="control-label"></label>*@
                    <input asp-for="LastName" class="form-control input-gray" placeholder="Last Name" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @*<label asp-for="Email" class="control-label"></label>*@
                    <input asp-for="Email" class="form-control input-gray" placeholder="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    @*<label asp-for="Password" class="control-label"></label>*@
                    <input asp-for="Password" type="password" class="form-control input-gray" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    @*<label asp-for="ConfirmPassword" class="control-label"></label>*@
                    <input asp-for="ConfirmPassword" type="password" class="form-control input-gray" placeholder="Confirm Password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Sign Up!" class="btn btn-primary text-center" />
                </div>
                @*<button type="submit" class="btn btn-primary">Register</button>*@
            </form>
        </div>
    </div>
</div>