<!DOCTYPE html>
@{ 
    Layout = null;
}

<html lang="en">
<head>
    <title>Grab & Go</title>
    <link rel="stylesheet" type="text/css" href="../css/style.css" />
</head>
<body>
    <div class="image" style="background-image: url('../Images/walmart.jpg');">
        <div class="form-container">
            <div><h2 class="title">Grab & Go</h2></div>
            <div class="user-img"></div>
            <form>
                <ul class="list">
                    <li><h2>Member Login</h2></li>
                    <li><input type="text" name="User Name" placeholder="User Name" /></li>
                    <li><input type="password" name="Password" placeholder="........." /></li>
                    <li><input onclick="window.location.href = 'List.html'" type="button" name="Submit" value="Submit" /></li>
                    <li>Forgot Password?</li>
                    <li><input style="background-color: #0a883b; width:100px;" type="submit" asp-action="SignUp" value="Sign Up!" /></li>
                </ul>
            </form>
        </div>
    </div>
</body>
</html>
